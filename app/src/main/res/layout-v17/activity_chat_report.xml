<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.ChatReportActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Message_form_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       android:hint="@string/message_farsi"
        app:hintTextColor="@color/black"
        android:background="@color/khas"
        android:backgroundTint="@color/khas"
        tools:targetApi="lollipop">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Message_TextBox"
          android:textDirection="rtl"
            android:textStyle="bold"
            android:padding="25dp"
            android:inputType="text"
            android:fontFamily="@font/b_nazanin"
           android:digits="@string/digit_farsi"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>