<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.MapActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/MapForm0"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
   app:layout_constraintBottom_toTopOf="@+id/MapForm1">
<org.neshan.mapsdk.MapView
    android:id="@+id/MapMapview"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/MapFindLocation"
        style="?attr/floatingActionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_location"
        android:layout_margin="19dp"
        android:contentDescription="@string/location"
        tools:targetApi="lollipop" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/MapZoomLocation"
        style="?attr/floatingActionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/MapFindLocation"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_zoom"
        android:layout_margin="19dp"
        android:contentDescription="@string/location"
        tools:targetApi="lollipop" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/MapZoomOutLocation"
        style="?attr/floatingActionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
app:layout_constraintRight_toLeftOf="@id/MapZoomLocation"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_zoom_out"
        android:layout_margin="19dp"
        android:contentDescription="@string/location"
        tools:targetApi="lollipop" />
</androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/MapForm1"
        app:layout_constraintTop_toBottomOf="@id/MapForm0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<com.google.android.material.button.MaterialButton
    android:id="@+id/MapStartWork"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/start_work_farsi"
    android:fontFamily="@font/b_nazanin"
    android:textStyle="bold"
android:layout_marginBottom="5dp"
  app:layout_constraintBottom_toTopOf="@id/Map_f0"
    app:layout_constraintLeft_toLeftOf="parent"
  app:layout_constraintTop_toTopOf="parent"
/>
     <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/Map_f0"
         app:layout_constraintTop_toBottomOf="@id/MapStartWork"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         android:padding="20dp"
         android:layout_width="match_parent"
         android:layout_height="0dp"  >
         <com.google.android.material.textview.MaterialTextView
         android:id="@+id/MapLocWork"
         android:textStyle="bold"
             android:fontFamily="@font/b_nazanin"
         android:text="@string/MapLocWork_farsi"
         android:textColor="@color/Oli"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintLeft_toRightOf="@id/MapLocWorkText"
         android:layout_width="0dp"
         android:layout_height="match_parent"/>
         <com.google.android.material.textview.MaterialTextView
             android:id="@+id/MapLocWorkText"
             android:fontFamily="@font/b_nazanin"
             android:text="@string/MapLocWork_farsi"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toLeftOf="@id/MapLocWork"
             android:layout_width="0dp"
             android:layout_height="match_parent"/>
     </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Map_f1"
            app:layout_constraintTop_toBottomOf="@id/Map_f0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"  >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/MapTimeWork"
                android:textStyle="bold"
                android:fontFamily="@font/b_nazanin"
                android:text="@string/MapTimeWork"
                android:textColor="@color/Oli"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/MapTimeWorkText"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/MapTimeWorkText"
                android:text="@string/MapTimeWork"
                android:fontFamily="@font/b_nazanin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/MapTimeWork"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>










</androidx.constraintlayout.widget.ConstraintLayout>