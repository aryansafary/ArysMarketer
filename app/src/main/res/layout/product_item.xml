<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/ItemProductClick"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/PI_form1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/PI_name"
        android:fontFamily="@font/b_nazanin"
        style="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        android:text="@string/Product.Name"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/PI_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/PI_image"
    app:layout_constraintDimensionRatio="16:9"
    android:adjustViewBounds="true"
    android:scaleType="fitCenter"
android:background="@drawable/ic_download"
    app:layout_constraintTop_toBottomOf="@id/PI_name"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:contentDescription="@string/product" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/form2"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/PI_form1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/PI_brand_text"
            android:fontFamily="@font/b_nazanin"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/Oli"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:text="@string/productsBrand"
            app:layout_constraintBottom_toTopOf="@id/PI_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/PI_brand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/PI_brand"
            android:fontFamily="@font/b_nazanin"
            android:textStyle="bold"
            android:padding="10dp"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:text="@string/productsBrand"
            app:layout_constraintBottom_toTopOf="@id/PI_description"
            app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toLeftOf="@id/PI_brand_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/PI_description"
android:padding="10dp"
            android:fontFamily="@font/b_nazanin"
            android:textStyle="bold"
            style="@style/TextAppearance.Material3.BodyLarge"
            app:layout_constraintTop_toBottomOf="@id/PI_brand"
            android:text="@string/Product.Description"
           app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/form2">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/PI_price"
style="@style/MaterialAlertDialog.Material3.Title.Text"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/b_nazanin"
        android:textSize="25sp"
app:layout_constraintLeft_toRightOf="@+id/money_logo"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/product.price"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/money_logo"
        android:src="@mipmap/ic_money2_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
app:layout_constraintRight_toLeftOf="@id/PI_price"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
<com.google.android.material.textview.MaterialTextView
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/productItem_Id"/>

</androidx.constraintlayout.widget.ConstraintLayout>