<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.NonSubscriptionActivity">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/NoneSub_anim"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:lottie_url="https://arysapp.com/lottie/deadline.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:layout_constraintBottom_toTopOf="@id/NoneSub_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/NoneSub_message"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/NoneSub_anim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/NoneSub_text"
            android:layout_margin="5dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:fontFamily="@font/b_nazanin"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="@string/NoneSub_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.google.android.material.button.MaterialButton
            android:text="@string/logout_farsi"
            android:textStyle="bold"
            android:fontFamily="@font/iran"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:padding="20dp"
            android:layout_marginBottom="100dp"
            android:layout_gravity="bottom|center"
            android:id="@+id/NoneSub_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>