<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cover_stroke_dont_have_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/productNI_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ListFormItemProduct"
        android:layout_marginTop="5dp"
        android:layout_width="0dp"
        android:layout_height="200dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ListFormItemProduct"
        app:layout_constraintLeft_toRightOf="@id/productNI_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="match_parent">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ProductNI_tex"
        android:text="@string/product"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toTopOf="@id/ProductNI_count"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toRightOf="parent"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ProductNI_count"
        android:text="@string/count"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ProductNI_tex"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>