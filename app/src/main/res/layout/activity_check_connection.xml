<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.CheckConnectionActivity">
<com.airbnb.lottie.LottieAnimationView
    android:id="@+id/CheckInternetLottie"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintBottom_toTopOf="@id/CheckInternetText"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:lottie_rawRes="@raw/no_internet"
    app:lottie_autoPlay="true"
    app:lottie_loop="true"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/CheckInternetText"
        app:layout_constraintTop_toBottomOf="@id/CheckInternetLottie"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/CheckInternetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:fontFamily="@font/b_nazanin"
      android:textAlignment="center"
        android:text="@string/internet_not_connection"
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_gravity="center_horizontal" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/CheckInternetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CheckInternetText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/try_agaien_connn"
        style="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        android:fontFamily="@font/b_nazanin"
        android:layout_margin="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>