<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_margin="30dp"
    android:padding="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_pay_price"
        android:text="@string/price_tesrt"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:padding="20dp"
        android:layout_marginTop="35dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cover_stroke_dont_have_color"
        android:fontFamily="@font/b_nazanin"
        style="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@id/item_pay_form1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_pay_form1"
        android:layout_width="match_parent"
        android:background="@drawable/cover_stroke_dont_have_color"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/item_pay_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_pay_subscription_text"
            android:text="@string/subscription_time"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:padding="20dp"

            android:layout_height="wrap_content"
            android:fontFamily="@font/b_nazanin"
            app:layout_constraintLeft_toRightOf="@id/item_pay_subscription"
            style="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_pay_subscription"
            android:text="@string/month_farsi"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/b_nazanin"
            style="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toLeftOf="@id/item_pay_subscription_text"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/item_pay_submit"
        android:textStyle="bold"
        android:padding="5dp"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:text="@string/buy_subscription"
        app:layout_constraintTop_toBottomOf="@id/item_pay_form1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:targetApi="lollipop" />
</androidx.constraintlayout.widget.ConstraintLayout>
<com.google.android.material.textview.MaterialTextView
    android:visibility="gone"
    android:id="@+id/item_pay_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:visibility="gone"
        android:id="@+id/item_pay_amount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</com.google.android.material.card.MaterialCardView>