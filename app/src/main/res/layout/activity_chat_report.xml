<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.ChatReportActivity">

 <androidx.recyclerview.widget.RecyclerView
     android:id="@+id/Message_recycler"
     tools:listitem="@layout/message_row"
     app:layout_constraintBottom_toTopOf="@id/Message_form_0"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     android:layout_width="0dp"
     android:layout_height="0dp"/>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/Message_form_0"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    >
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Message_form_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
       app:layout_constraintLeft_toRightOf="@+id/Message_SendBtn"
        android:padding="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       android:hint="@string/message_farsi"
        app:hintTextColor="@color/black"
        android:background="@color/khas"
        app:boxStrokeColor="@color/black"
        android:backgroundTint="@color/khas"
        tools:targetApi="lollipop">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Message_TextBox"
          android:textDirection="rtl"
            android:textStyle="bold"
            android:padding="25dp"
            android:inputType="text"
            android:fontFamily="@font/b_nazanin"
           android:digits="@string/digit_farsi"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:targetApi="jelly_bean_mr1" />
    </com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.button.MaterialButton
    android:id="@+id/Message_SendBtn"
    android:layout_width="wrap_content"
    android:fontFamily="@font/b_nazanin"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:text="@string/send_farsi"
    android:layout_height="match_parent"
    app:layout_constraintRight_toLeftOf="@id/Message_form_text"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>